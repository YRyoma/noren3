<%# header をここに記述します %>
  <%#　toppage content below header %>
   <div id="content">

    <div id="inner-content">

      <div id="main" role="main">

        <div class="category-title">
          <h2><%= @category.name %></h2>
          <p><%= @category.description %></p>
        </div>

        <% @category.articles.each do |article| %>

        <article class="hentry" role="article">

          <header class="article-header">
            <div class="one-title">
              <div class="entry-thumbnail">
                <a href= "article/<%= article.id %>" ><img src= " /assets/article/<%= article.photo %>" ></a><%# 記事画像挿入、リンクがうまく動かない %>
              </div>
              <h1 class="h2 entry-title"><a href="article/<%= article.id %>" rel="bookmark" title="" ><%= article.title %></a></h1>
            </div>
          </header>
          <div class="entry-content">

            <p class="entry-text"><%= truncate(strip_tags(article.content), :length => 50) %></p>

            <div class="entry-meta">

              <div class="entry-member">
                <a href="member/<%= article.member.id %>"><img src="/assets/member/<%= article.member.photo %>"><p><%= article.member.name %></p></a>
              </div>

              <a href="<%= article.category.id %>">
                <div class="entry-category">
                  <p><%= article.category.name %></p>
                </div>
              </a>

              <p class="byline vcard"><%= article.created_at.strftime("%x") %><%# 記事の書かれた日付を記述 %></p>

            </div>

          </div>

        </article>
        <% end %>
      </div>
    </div>
  </div>




