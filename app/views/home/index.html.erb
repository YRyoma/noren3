  <div id="content">

    <div id="top-image">
      <%# image呼び出す %>
    </div>

    <div id="inner-content">

      <div id="main" role="main">

        <div class="article-sub-title">
          <h2>NEW</h2>
        </div>

      	<% @articles.each do |article| %><%# ”new” の記事の表示開始 ここから下をeach do で繰り返す %>
      	<article class="hentry" role="article">

      	  <header class="article-header">
      	  	<div class="one-title">
      	  	  <div class="entry-thumbnail">
      	  	  	<a href= "<%= article.url %>"><img src= /assets/article/<%= article.photo %> width="307" height="179"></a> <%# 記事画像挿入、リンクがうまく動かない %>
      	  	  </div>
      	  	  <h1 class="h2 entry-title"><a href= "<%= article.url %>"><%= article.title %></a><%# 記事タイトルと、そのリンク %> <%# ここ不明！タイトルに関係する属性を入れる必要あり%> </h1>
      	  	</div>
      	  </header>
      	  <div class="entry-content">

      	  	<p class="entry-text"><a href= "<%= article.url %>"><%= truncate(article.content, length: 50) %></a><%# 記事詳細へのリンクと、50文字を呼び出す %></p>

      	  	<div class="entry-meta">

              <div class="entry-member">
                <a href="<%# 未実装 %>"><img src= /assets/member/<%= article.member.photo %> width="32" height="32">
              <%# 個別メンバーのプロフィール写真、名前を呼び出す %><p><%= article.member.name %></p></a>
              </div>

              <div class="entry-category">
                <p><a href="<%# 未実装 %>"><%= article.category.name %></a></p>
              </div>

              <p class="byline vcard"><%= article.created_at.strftime("%x") %></p>

            </div>

          </div>

      	</article>
        <% end %>
      </div>
    </div>
  </div>





